page{
    background:#eee;
}

.submit-button{
    margin-top:60rpx;
    background-color:#1aad19;
    color:#fff;
    width:600rpx;
}

.button-hover-1aad19{
    background-color:#158f15;
}

.wrapper-detail-button{
    margin:0 auto;
    margin-top:40rpx;
    width:650rpx;
}

.wrapper-detail-button .edit-this-task{
    display: inline-block;
    margin:0;
    /* margin-top:40rpx; */
    background-color:#1aad19;
    color:#fff;
    width:300rpx;
}

.wrapper-detail-button .delete-this-task{
    display: inline-block;
    margin:0;
    /* margin-top:60rpx; */
    background-color:#fa5151;
    color:#fff;
    width:300rpx;
    margin-left:40rpx;
}

.wrapper-detail-button .do-this-task{
    background-color:#1aad19;
    color:#fff;
    width:650rpx;
}

.tabBar{
    width:100%;
    height:76rpx;
    background:#fff;
    box-shadow:2rpx 2rpx 25rpx 3rpx #c5c5c5;
}

.tabBar text{
    display:inline-block;
    width:250rpx;
    height:72rpx;
    text-align:center;
    line-height:72rpx;
    font-size:34rpx;
}

.content{
    margin-top:30rpx;

}

.content > view{
    display:flex;
    align-items:center;
    background:#fff;
    width:100%;
    height:82rpx;
}

.content .sign{
    font-size:32rpx;
    margin-left:24rpx;
}

.content .wrapper-input{
    position:absolute;  /*便于左边相对于设备边框定位,不能设置top*/
    left:260rpx;
    width:450rpx;
}

/*设置wrapper-input中的input表单字体大小*/
.content .wrapper-input input{
    font-size:32rpx;
}

/* .content .wrapper-input picker{
    background-color:#0045a9;
} */

.task-name{
    margin-bottom:30rpx;
    border-top:2rpx solid #c7c7c7;
    border-bottom:2rpx solid #c7c7c7; 
}

.set-time{
    border-top:2rpx solid #c7c7c7;
}

.set-time .wrapper-input{
    width:450rpx;
}

.set-time .wrapper-input text{
    width:360rpx;
    font-size:32rpx;
}

.set-time switch{
    margin-left:466rpx;
}

.set-time, .focus-time, .remind{
    border-bottom:2rpx solid #c7c7c7;
}

/*设置多日任务坚持日期的picker样式*/
#date-picker-st, #date-picker-ed{
    display:inline-block;
    font-size:32rpx;
}

.set-time .wrapper-input #to{
    font-size:28rpx;
    margin-left:10rpx;
    margin-right:10rpx;
}

.remind{
    margin-bottom:30rpx;
}

.content .remind .wrapper-input text{
    display:block;
    font-size:32rpx;
}

.content .remind switch{
    margin-left:530rpx;
}

.content .level .wrapper-input text{
    display:block;
    font-size:32rpx;
}

.content .level .wrapper-input picker{
    font-size:32rpx;
}

.content .level switch{
    margin-left:498rpx;
}

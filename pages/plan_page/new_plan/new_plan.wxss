.place{
    border-top:2rpx solid #c7c7c7;
    border-bottom:2rpx solid #c7c7c7;
}

.level{
    border-bottom:2rpx solid #c7c7c7;
    margin-bottom:30rpx;
}

.content .task-content{
    height:300rpx;
    border-top:2rpx solid #c7c7c7;
    border-bottom:2rpx solid #c7c7c7;
}

.text-area{
    position:absolute;
    left:260rpx;
    height:250rpx;
    width:460rpx;
    font-size:32rpx;
}